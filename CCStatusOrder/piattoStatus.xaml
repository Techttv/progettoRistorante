<UserControl x:Class="CCStatusOrder.piattoStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CCStatusOrder"
             mc:Ignorable="d" 
             d:DesignHeight="{DynamicResource FinestraHeight}" d:DesignWidth="{DynamicResource FinestraWidth}"
    xmlns:System="clr-namespace:System;assembly=System.Runtime">
    <UserControl.Resources>
        <System:Double x:Key="FinestraWidth">150</System:Double>
        <System:Double x:Key="FinestraHeight">25</System:Double>
    </UserControl.Resources>
    <Grid Margin="35,0,0,0">
        <TextBlock x:Name="txt_statdesc" FontSize="15"  Foreground="#FFEDF1D6" Text="" VerticalAlignment="Center" TextWrapping="Wrap" Margin="5,0,28,0" FontFamily="{DynamicResource SFPro Regular Display}"/>
        <Image x:Name="icon_statimage" Source="/Icon/Disponibile_icon.png" HorizontalAlignment="Right" VerticalAlignment="Center" Width="20" Height="20" Margin="0,3,4,3"/>
    </Grid>
</UserControl>
